  <script>
    const servicesData = {
      "Instagram": [{ name: "Abonn√©s (15$ /1000)", price: 0.015 }, { name: "Likes (5$ /1000)", price: 0.005 }, { name: "Commentaires (15$ /1000)", price: 0.015 }, { name: "Vues Reels (3$ /1000)", price: 0.003 }, { name: "Live Streaming (8$ /1000)", price: 0.008 }],
      "TikTok": [{ name: "Abonn√©s (15$ /1000)", price: 0.015 }, { name: "Likes (5$ /1000)", price: 0.005 }, { name: "Commentaires (15$ /1000)", price: 0.015 }, { name: "Vues Vid√©o (2$ /1000)", price: 0.002 }, { name: "Live Streaming (8$ /1000)", price: 0.008 }],
      "YouTube": [{ name: "Abonn√©s (15$ /1000)", price: 0.015 }, { name: "Commentaires (15$ /1000)", price: 0.015 }, { name: "Vues Shorts (5$ /1000)", price: 0.005 }, { name: "Live Streaming (8$ /1000)", price: 0.008 }, { name: "60k Min Visionnage (60$)", price: 0.001, isFixed: true, fixedPrice: 60 }],
      "Facebook": [{ name: "Followers Page (15$ /1000)", price: 0.015 }, { name: "Likes (5$ /1000)", price: 0.005 }, { name: "Commentaires (15$ /1000)", price: 0.015 }, { name: "Live Streaming (8$ /1000)", price: 0.008 }],
      "Twitter": [{ name: "Followers (15$ /1000)", price: 0.015 }, { name: "Likes (8$ /1000)", price: 0.008 }],
      "Spotify": [{ name: "Streams (5$ /1000)", price: 0.005 }],
      "LinkedIn": [{ name: "Abonn√©s (25$ /1000)", price: 0.025 }],
      "Threads": [{ name: "Followers (10$ /1000)", price: 0.010 }]
    };

    const reseauSel = document.getElementById('reseau');
    const typeSel = document.getElementById('type');
    const qteIn = document.getElementById('quantite');
    const priceOut = document.getElementById('total-price');
    const promoMsg = document.getElementById('promo-msg');

    function updateServices() {
      const selectedReseau = reseauSel.value;
      const options = servicesData[selectedReseau];
      typeSel.innerHTML = "";
      options.forEach(s => {
        let opt = document.createElement('option');
        opt.value = s.price;
        opt.text = s.name;
        if(s.isFixed) opt.dataset.fixed = s.fixedPrice;
        typeSel.add(opt);
      });
      calculer();
    }

    function calculer() {
      const selectedOpt = typeSel.options[typeSel.selectedIndex];
      let total = 0;
      let qte = parseFloat(qteIn.value) || 0;
      if (selectedOpt && selectedOpt.dataset.fixed) {
        total = parseFloat(selectedOpt.dataset.fixed);
        qteIn.disabled = true;
      } else {
        qteIn.disabled = false;
        total = qte * parseFloat(typeSel.value);
        if (qte >= 5000) { total *= 0.9; promoMsg.style.display = 'block'; }
        else { promoMsg.style.display = 'none'; }
      }
      priceOut.innerText = total.toFixed(2);
    }

    typeSel.addEventListener('change', calculer);
    qteIn.addEventListener('input', calculer);
    updateServices();

    document.getElementById('orderForm').onsubmit = function(e) {
      e.preventDefault();
      const msg = `*NOUVELLE COMMANDE YOKOBOOST*\nüë§ Client: ${document.getElementById('nom_client').value}\nüåê Plateforme: ${reseauSel.value}\n‚úÖ Service: ${typeSel.options[typeSel.selectedIndex].text}\nüî¢ Quantit√©: ${qteIn.value}\nüîó Lien: ${document.getElementById('lien').value}\nüí∞ TOTAL: ${priceOut.innerText} $`;
      window.open(`https://wa.me/243897238396?text=${encodeURIComponent(msg)}`, '_blank');
    };
  </script>
